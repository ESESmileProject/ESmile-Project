<div id="<%= dom_id recepcionist %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= recepcionist.nome %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this recepcionist", recepcionist, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this recepcionist', edit_recepcionist_path(recepcionist), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
